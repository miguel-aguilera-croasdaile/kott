<%= simple_form_for @order do |f| %>


<h1> Confirm Order </h1>
<% current_user.cart.cart_items.each_with_index do |item, index| %>
<% product = Product.find(item.product_id) %>

<p><%= index + 1%>. <%= product.name %> </p>
<p> <%= product.price %> </p>

<% end %>

<hr>
<%= f.button :submit, class: "btn" %>

<% end %>
