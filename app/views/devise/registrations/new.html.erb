<div class="container">

  <div class="login-wrapper">

    <div class="login-form">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <h1> Sign up</h1>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }%>
        <%= f.input :password, required: true, input_html: { autocomplete: "new-password" } %>
        <p class="password-warning">NOTE: OUR SSL CERTIFICATE ISN'T READY, USE A UNIQUE PASSWORD IF POSSIBLE </p>
      </div>

      <div class="form-bottom">

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "primary-button" %>
        </div>

        <%= render "devise/shared/links" %>

      </div>

      <% end %>

    </div>

  </div>

</div>

